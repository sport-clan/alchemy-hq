#!/usr/bin/env ruby

require "etc"
require "pp"

# process args

username = ARGV.shift
username or raise "Syntax error"

command = ARGV
command.size > 0 or raise "Syntax error"

# find user

user_entry =
	Etc.getpwnam username

user_entry \
	or raise "User not found"

# change permissions

Process.initgroups \
	user_entry.name,
	user_entry.gid

Process::GID.change_privilege \
	user_entry.gid

Process::UID.change_privilege \
	user_entry.uid

# setup environment

ENV["HOME"] =
	user_entry.dir

# execute the command

Bundler.with_clean_env do
	exec *command
end
